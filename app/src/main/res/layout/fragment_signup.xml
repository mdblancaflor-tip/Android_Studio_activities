<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context="com.example.pdapp.SignupFragment">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/titleConstraint"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/imageView3"
            android:layout_width="413dp"
            android:layout_height="734dp"
            android:scaleType="fitXY"
            android:src="@drawable/field"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/bc"
            android:layout_width="261dp"
            android:layout_height="391dp"
            android:layout_marginStart="76dp"
            android:layout_marginTop="108dp"
            android:background="#2DFFFFFF"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/bc2"
            android:layout_width="259dp"
            android:layout_height="34dp"
            android:layout_marginStart="76dp"
            android:layout_marginTop="20dp"
            android:background="#2DFFFFFF"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/bc" />

        <TextView
            android:id="@+id/tutorial"
            android:layout_width="104dp"
            android:layout_height="37dp"
            android:layout_marginTop="124dp"
            android:layout_marginEnd="212dp"
            android:text="SignUp"
            android:textColor="#000000"
            android:textSize="24sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />


        <TextView
            android:id="@+id/textView5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="76dp"
            android:layout_marginTop="40dp"
            android:background="#00F3F3F3"
            android:text="Already have an account ? "
            android:textColor="#F1F1F1"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/CreateAcc" />

        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="38dp"
            android:layout_height="45dp"
            android:layout_marginTop="12dp"
            android:src="@drawable/user"
            app:layout_constraintEnd_toStartOf="@+id/nameU"
            app:layout_constraintTop_toBottomOf="@+id/tutorial" />

        <EditText
            android:id="@+id/nameU"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:layout_marginEnd="76dp"

            android:ems="10"
            android:hint="Name"
            android:inputType="textEmailAddress"
            android:textColor="#000000"
            android:textColorHint="#000000"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tutorial" />

        <ImageView
            android:id="@+id/imageView5"
            android:layout_width="38dp"
            android:layout_height="45dp"
            android:layout_marginTop="40dp"
            android:src="@drawable/msg"
            app:layout_constraintEnd_toStartOf="@+id/EmailAddress"
            app:layout_constraintTop_toBottomOf="@+id/imageView2" />

        <EditText
            android:id="@+id/EmailAddress"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="40dp"
            android:layout_marginEnd="80dp"
            android:ems="10"
            android:hint="Email or Username"
            android:inputType="textEmailAddress"
            android:textColor="#000000"
            android:textColorHint="#000000"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/nameU" />

        <ImageView
            android:id="@+id/paswd"
            android:layout_width="38dp"
            android:layout_height="45dp"
            android:layout_marginTop="40dp"
            android:src="@drawable/paswd"
            app:layout_constraintEnd_toStartOf="@+id/Ipasswd"
            app:layout_constraintTop_toBottomOf="@+id/imageView5" />

        <EditText
            android:id="@+id/Ipasswd"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="40dp"
            android:layout_marginEnd="80dp"
            android:ems="10"
            android:hint="Password"
            android:inputType="textPassword"
            android:textColor="#000000"
            android:textColorHint="#000000"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/EmailAddress" />

        <Button
            android:id="@+id/CreateAcc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="48dp"
            android:layout_marginEnd="120dp"
            android:text="Create Account"
            app:backgroundTint="#388E3C"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/Ipasswd" />

        <Button
            android:id="@+id/SignIn"
            style="?android:attr/borderlessButtonStyle"
            android:layout_width="78dp"
            android:layout_height="33dp"
            android:layout_marginTop="36dp"
            android:layout_marginEnd="88dp"
            android:includeFontPadding="false"
            android:text="Sign In"
            android:textAllCaps="false"
            android:textColor="#FFFFFF"
            android:textSize="12sp"
            android:textStyle="bold"
            app:backgroundTint="#388E3C"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/CreateAcc" />


    </androidx.constraintlayout.widget.ConstraintLayout>

</layout>
