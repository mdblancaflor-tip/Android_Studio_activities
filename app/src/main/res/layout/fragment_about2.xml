<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context="com.example.pdapp.About2Fragment">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/aaboutConstraint"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/imageView8"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:scaleType="fitXY"
            android:src="@drawable/rice"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/about"
            android:layout_width="104dp"
            android:layout_height="32dp"
            android:layout_marginStart="152dp"
            android:layout_marginTop="32dp"
            android:text="About Us"
            android:textColor="#00796B"
            android:textSize="24sp"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <Button
            android:id="@+id/aback"
            android:layout_width="192dp"
            android:layout_height="43dp"
            android:layout_marginStart="108dp"
            android:text="Back"
            app:backgroundTint="#00796B"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView2" />

        <TextView
            android:id="@+id/textView2"
            android:layout_width="316dp"
            android:layout_height="415dp"
            android:layout_marginStart="44dp"
            android:layout_marginTop="36dp"
            android:background="#80FFFFFF"
            android:justificationMode="inter_word"
            android:text="The project is a drone-based monitoring system in detecting if the rice plant is healthy or not using image processing. This will help farmers to automatically monitor their rice field and not need to visit their rice fields regularly. The project consists of a drone with a built-in camera programmed to identify any rice plant diseases in the field. The drone will be automated through the use mapping to create a track for the drone to follow and fly autonomously. The system includes a mobile application for real time capturing of data."
            android:textColor="#000000"
            android:textSize="20sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/about" />


    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>